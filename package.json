{
  "name": "hono-zod-openapi",
  "version": "1.0.1",
  "description": "Alternative Hono middleware for creating OpenAPI documentation from Zod schemas",
  "keywords": [
    "documentation",
    "hono",
    "middleware",
    "openapi",
    "swagger",
    "typescript",
    "zod"
  ],
  "homepage": "https://github.com/paolostyle/hono-zod-openapi#readme",
  "bugs": {
    "url": "https://github.com/paolostyle/hono-zod-openapi/issues"
  },
  "license": "MIT",
  "author": "Paweł Dąbrowski <dabrowskip9@gmail.com>",
  "repository": "github:paolostyle/hono-zod-openapi",
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "format": "oxfmt --type-aware",
    "format:check": "oxfmt --check",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "test": "vitest --typecheck",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "zod-openapi": "^5.4.6"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/swagger-ui": "^0.5.3",
    "@types/node": "^22.19.7",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "hono": "^4.11.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "hono": "^4.8.0",
    "zod": "^4.0.0"
  },
  "lint-staged": {
    "*": "oxfmt --no-error-on-unmatched-pattern",
    "*.ts": "oxlint --fix"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316"
}

{
  "name": "hono-zod-openapi",
  "version": "0.5.0",
  "description": "Alternative Hono middleware for creating OpenAPI documentation from Zod schemas",
  "author": "Paweł Dąbrowski <dabrowskip9@gmail.com>",
  "homepage": "https://github.com/paolostyle/hono-zod-openapi#readme",
  "bugs": {
    "url": "https://github.com/paolostyle/hono-zod-openapi/issues"
  },
  "repository": "github:paolostyle/hono-zod-openapi",
  "license": "MIT",
  "keywords": [
    "hono",
    "zod",
    "openapi",
    "documentation",
    "middleware",
    "swagger",
    "typescript"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "lint": "biome check",
    "lint:fix": "biome check --fix --unsafe",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "test": "vitest --typecheck",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.3",
    "zod-openapi": "^5.4.2"
  },
  "peerDependencies": {
    "hono": "^4.8.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@hono/node-server": "^1.13.8",
    "@hono/swagger-ui": "^0.5.0",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/ui": "^3.0.6",
    "husky": "^9.1.7",
    "tsup": "^8.3.6",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6",
    "zod": "^4.1.11"
  },
  "packageManager": "pnpm@10.18.0+sha512.e804f889f1cecc40d572db084eec3e4881739f8dec69c0ff10d2d1beff9a4e309383ba27b5b750059d7f4c149535b6cd0d2cb1ed3aeb739239a4284a68f40cfa"
}

{
  "name": "hono-zod-openapi",
  "version": "0.4.2",
  "description": "Alternative Hono middleware for creating OpenAPI documentation from Zod schemas",
  "author": "Paweł Dąbrowski <dabrowskip9@gmail.com>",
  "homepage": "https://github.com/paolostyle/hono-zod-openapi#readme",
  "bugs": {
    "url": "https://github.com/paolostyle/hono-zod-openapi/issues"
  },
  "repository": "github:paolostyle/hono-zod-openapi",
  "license": "MIT",
  "keywords": [
    "hono",
    "zod",
    "openapi",
    "documentation",
    "middleware",
    "swagger",
    "typescript"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "lint": "biome check",
    "lint:fix": "biome check --fix --unsafe",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "test": "vitest --typecheck",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "zod-openapi": "^3.3.0"
  },
  "peerDependencies": {
    "hono": "^4.6.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@hono/node-server": "^1.13.4",
    "@hono/swagger-ui": "^0.4.1",
    "@types/node": "^22.8.5",
    "@vitest/coverage-v8": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "husky": "^9.1.6",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee"
}
